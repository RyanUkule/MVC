
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    <div id="navbar" class="navbar-collapse collapse">
        <form class="navbar-form navbar-right" action="/account/login" method="post" role="form">
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <div class="col-sm-10">
                    <input type="text" id="txtEmail" name="txtEmail" placeholder="Email" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="txtPassword">Password</label>
                <div>
                    <input type="password" id="txtPassword" name="txtPassword" placeholder="Password" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
        </form>
    </div><!--/.navbar-collapse -->
</div>